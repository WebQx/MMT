OPENAI_API_KEY=sk-your-openai-api-key
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
GUEST_SECRET=guestsecret
KEYCLOAK_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----
KEYCLOAK_ISSUER=https://auth.example.com/realms/main
WHISPER_MODEL_SIZE=base
ENABLE_CLOUD_TRANSCRIPTION=true
ENABLE_LOCAL_TRANSCRIPTION=true
OPENEMR_FHIR_BASE_URL=http://localhost:8080
OPENEMR_FHIR_CLIENT_ID=mmt_client
OPENEMR_FHIR_CLIENT_SECRET=mmt_secret
OPENEMR_FHIR_USERNAME=admin
OPENEMR_FHIR_PASSWORD=pass
OPENEMR_SITE=default

# Production Environment Configuration
ENV=dev
DATABASE_URL=mysql://user:password@mysql-host:3306/mmt_db

# Audit Logging (Mandatory in Production)
AUDIT_LOG_FILE=/app/logs/audit.log

# Field-Level Encryption (Optional)
ENABLE_FIELD_ENCRYPTION=false
ENCRYPTION_KEYS=key1:BASE64_ENCODED_32_BYTE_KEY,key2:BASE64_ENCODED_32_BYTE_KEY
PRIMARY_ENCRYPTION_KEY_ID=key1
ENCRYPTION_ROTATE_HOURS=6

# JWT Configuration
INTERNAL_JWT_SECRET=your-32-character-secret-key-here
USE_RSA_INTERNAL_JWT=false

# TLS Configuration (Production)
SSL_CERT_FILE=/app/certs/server.crt
SSL_KEY_FILE=/app/certs/server.key
ENFORCE_TLS_IN_PRODUCTION=true

# Worker Pool Optimization
ASYNC_MAX_WORKERS=4
ASYNC_QUEUE_MAXSIZE=100
WORKER_POOL_OPTIMIZATION_ENABLED=true
MIN_WORKERS_PER_CORE=1
MAX_WORKERS_PER_CORE=4

# External Services (Production)
EXTERNAL_RABBITMQ_ENABLED=false
EXTERNAL_RABBITMQ_HOST=rabbitmq.example.com
EXTERNAL_REDIS_ENABLED=false
EXTERNAL_REDIS_HOST=redis.example.com

# RedisBloom Idempotency Enhancement
ENABLE_REDIS_BLOOM_IDEMPOTENCY=false
REDIS_BLOOM_KEY_PREFIX=mmt:bloom:
REDIS_BLOOM_TTL_SECONDS=86400
USE_BLOOM_IDEMPOTENCY=false
BLOOM_ERROR_RATE=0.001
BLOOM_CAPACITY=100000

# Data Retention
RETENTION_DAYS=30
ASYNC_TASK_RETENTION_DAYS=7
ASYNC_CLEANUP_INTERVAL_HOURS=24

# Vault Integration (Optional)
VAULT_ADDR=https://vault.example.com
VAULT_ROLE_ID=your-vault-role-id
VAULT_SECRET_ID=your-vault-secret-id
VAULT_RSA_SECRET_PATH=kv/data/mmt/jwt-keys

# Monitoring and Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4318

# Redis Configuration
REDIS_URL=redis://redis-host:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=120

# Security
STORE_PHI=true
MASK_PHI_IN_RESPONSES=false
ADVANCED_PHI_MASKING=false

# CORS and WebSocket
CORS_ALLOW_ORIGINS=*
WEBSOCKET_ALLOWED_ORIGINS=*

# OpenTelemetry
OTEL_SERVICE_NAME=mmt-transcription-api
OTEL_RESOURCE_ATTRIBUTES=service.name=mmt-transcription-api,service.version=0.1.0
